<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:nav="using:FactoryPlanner.Components.Navigation"
		xmlns:controls="using:FactoryPlanner.Components.Controls">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
		<controls:BaseLayout >
			<TextBlock>TEST</TextBlock>
		</controls:BaseLayout>
    </Border>
  </Design.PreviewWith>

  <!-- Add Styles Here -->
	<Style Selector="controls|BaseLayout">
		<Setter Property="Template">
			<ControlTemplate>
				<Grid>

					<Grid.RowDefinitions>
						<RowDefinition Height="100" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<nav:NavigationBar Background="#111" >
						<nav:NavigationBar.Effect>
							<DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" />
						</nav:NavigationBar.Effect>
					</nav:NavigationBar>

					<ContentPresenter Grid.Row="1" Content="{TemplateBinding Content}" />

				</Grid>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
